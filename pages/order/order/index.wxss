/* pages/order/order/index.wxss */
.m-order-container{
  padding-top: 95rpx;
}

.m-order-opt{
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  box-shadow: 0 1px 18px #ddd;
}

.m-order-tags{
  padding: 25rpx 10rpx; 
  font-size: 31rpx;
  border-bottom: 2px solid #fff;
}

.m-order-opt .order-tags-active{
  color: #d34641;
  border-bottom: 2px solid #d34641;
}

.m-order-box{
  margin-top: 25rpx;
  background-color: #fff;
}