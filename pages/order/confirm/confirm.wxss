/* pages/order/confirm/confirm.wxss */

.m-comfirm-container {
  border-top: 1px solid #eee;
  padding-bottom: 155rpx;
}

.m-confirm-addr {
  background-color: #fff;
  padding: 35rpx;
  padding-bottom: 0;
}

.m-address-name {
  color: #000;
  font-size: 34rpx;
  font-weight: bold;
}

.m-text-margin {
  margin-right: 15rpx;
}

.m-next-icon {
  font-size: 45rpx;
  font-weight: 400;
}

.m-address-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  padding-top: 25rpx;
}

.m-address-box {
  display: flex;
  flex-direction: row;
}

.m-address-text {
  padding: 0 10rpx;
  line-height: 45rpx;
}

.u-address-icon {
  height: 64rpx;
  width: 74rpx;
}

.u-addr-line {
  background-color: #fff;
}

.u-addr-line image {
  height: 6rpx;
  width: 100%;
}

.m-order-box {
  padding: 35rpx;
  margin-top: 25rpx;
  background-color: #fff;
}

.m-items-title {
  font-size: 33rpx;
  color: #000;
  line-height: 65rpx;
  margin-right: 25rpx;
}

.m-goods-box {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: flex-start;
  padding: 35rpx 0;
}

.m-goods-photo {
  border: 1px solid #eee;
  height: 210rpx;
  width: 330rpx;
  margin-right: 25rpx;
}

.m-goods-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.m-goods-other {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.m-goods-other .m-font-strong {
  font-size: 35rpx;
}

.m-order-tota .m-font-strongl {
  font-size: 35rpx;
}

.m-order-items {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1px solid #eee;
}

.u-order-control {
  display: flex;
  flex-direction: row;
}

.u-order-control .u-num-btn {
  background-color: #f5f5f5;
  font-size: 46rpx;
  height: 65rpx;
  width: 75rpx;
  text-align: center;
  line-height: 60rpx;
}

.u-order-control .u-disable-btn {
  color: #c7c7c7;
}

.u-order-control .u-num-inp {
  width: 85rpx;
  text-align: center;
  height: 65rpx;
}

.m-flex-start {
  justify-content: flex-start !important;
}

.m-order-items input {
  height: 65rpx;
  width: 515rpx;
}

.m-order-total {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding-top: 35rpx;
  font-size: 32rpx;
  color: #000;
}

.m-confirm-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 110rpx;
  line-height: 110rpx;
  border-top: 1px solid #eee;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  color: #000;
  font-size: 32rpx;
}

.m-confirm-footer ,.m-font-strong{
  font-size: 35rpx;
}

.u-order-submit{
  background-color: #ea3a3d;
  color: #fff;
  font-size: 38rpx;
  padding: 0 45rpx;
  margin-left: 25rpx;
}

.m-no-addr{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 35rpx;
  padding-bottom: 18rpx;
  font-size: 32rpx;
  color: #000;
}