/* pages/goods/goodsDetails/goodsDetails.wxss */

page,.m-goods-container,.m-goods-body,scroll-view{
  box-sizing: border-box;
  height: 100%;
  width: 100%;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.m-goods-container {
  color: #333;
  padding-top: 45px;
  padding-bottom: 105rpx;
}

.m-goods-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 45px;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  border-bottom: 1px solid #f2f2f2;
  z-index: 10000;
}

.m-goods-title {
  font-size: 28rpx;
  padding: 20rpx 56rpx;
}

.m-goods-header .active {
  color: #c53122;
}

/* 商品详情轮播 */

.m-swiper-section {
  height: 650rpx;
}

.m-swiper-section swiper {
  height: 100%;
}

.m-swiper-section .m-goods-img {
  width: 100%;
  height: 650rpx;
}

/* 商品信息 */

.m-goods-info {
  /* padding: 20rpx 25rpx; */
}

.m-goods-block {
  background-color: #fff;
  margin-bottom: 25rpx;
  padding: 20rpx 25rpx;
}

.m-goods-name {
  line-height: 55rpx;
  font-size: 34rpx;
  color: #000;
}

.m-goods-price {
  padding: 30rpx 0;
  font-size: 28rpx;
}

.m-goods-price text {
  font-size: 45rpx;
}

.m-goods-sgin {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.m-sgin-content text {
  color: #999;
  font-size: 27rpx;
}

.m-sgin-icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 5px;
  vertical-align: bottom;
}

/* 优惠券 */

.m-goods-coupons {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top: 5rpx;
}

.m-coupons-box {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.m-coupons-content {
  padding-left: 35rpx;
  width: 609rpx;
}

.m-lable-title {
  color: #999;
  font-size: 30rpx;
}

.m-coupons-line {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.m-coupons-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.m-title-icon {
  padding: 0 15rpx;
  height: 35rpx;
  background-color: #fed6dd;
  border-radius: 10px;
  font-size: 25rpx;
  margin-right: 10rpx;
}

.m-coupons-icon {
  margin-top: 10rpx;
}

.u-coupons-icon {
  position: relative;
  height: 55rpx;
  width: 195rpx;
  margin-right: 15rpx;
}

.u-coupons-icon image {
  position: absolute;
  top: 0;
  left: 0;
  height: 55rpx;
  width: 195rpx;
}

.u-coupons-icon text {
  z-index: 10;
  position: absolute;
  top: 8rpx;
  left: 32rpx;
  font-size: 28rpx;
  color: #d34641;
}

.m-goods-choose {
  font-size: 28rpx;
}

.m-goods-choose, .m-goods-parameter {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.m-goods-parameter {
  margin-top: 35rpx;
}

.m-lable-content {
  padding: 0 35rpx;
}

/* 商品详情底部 */

.m-goods-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 105rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: 1px solid #ddd;
  background-color: #fff;
  z-index: 1000;
}

.m-add-cart {
  height: 100%;
  width: 225rpx;
  background-color: #f19b38;
  color: #fff;
  line-height: 105rpx;
  font-weight: 500;
  font-size: 35rpx;
  text-align: center;
}

.m-to-pay {
  height: 100%;
  width: 225rpx;
  background-color: #d74a45;
  color: #fff;
  line-height: 105rpx;
  font-weight: 500;
  font-size: 35rpx;
  text-align: center;
}

.m-customer-service, .m-user-cart {
  width: 160rpx;
  text-align: center;
  color: #b0b0b0;
  display: flex;
  flex-direction: column;
}

/* 宝贝评价 */

.m-goods-evaluation {
  background-color: #fff;
  padding: 25rpx 25rpx;
  padding-bottom: 0;
}

.m-evaluation-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 31rpx;
}

.m-evaluation-box {
  display: flex;
  flex-direction: row;
  padding-top: 25rpx;
  padding-bottom: 35rpx;
}

.m-user-photo {
  height: 95rpx;
  width: 146rpx;
}

.m-user-evaluation {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}

.m-evaluation {
  text-align: justify;
  margin-top: 15rpx;
  margin-bottom: 10rpx;
  color: #000;
}

.m-user-name {
  font-size: 26rpx;
}

.m-evaluation-stime {
  color: #9a9a9a;
  font-size: 26rpx;
}

.m-find-more {
  text-align: center;
  color: #636363;
  font-size: 31rpx;
  border-top: 1px solid #ddd;
  padding: 35rpx 0;
}

.u-opt-image {
  height: 55rpx;
  width: 65rpx;
  margin:auto;
  margin-top: 5px;
}

.m-goods-detail{
  margin-top: 25rpx;
  padding: 25rpx;
  background-color: #fff;
}

/* 领券 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}