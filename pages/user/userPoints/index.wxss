/* pages/user/userPoints/index.wxss */

.m-points-container {
}

.m-points-box {
  height: 450rpx;
  padding: 35rpx;
}

.m-points-view {
  position: relative;
  height: 450rpx;
}

.m-points-details {
  padding: 35rpx;
  padding-bottom: 0;
  background-color: #fff;
}

.user-points-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 450rpx;
  border-radius: 15rpx;
  z-index: 10;
}

.user-points-show {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 450rpx;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.u-user-photo {
  height: 110rpx;
  width: 110rpx;
  border-radius: 50%;
  border: 2px solid rgb(245, 157, 42);
  overflow: hidden;
}

.u-user-photo image {
  height: 100%;
  width: 100%;
}

.m-user-points {
  font-size: 32rpx;
  font-weight: 500;
  padding: 25rpx;
}

.u-getPoints-btn {
  font-size: 32rpx;
  background-color: #fff;
  color: #ee953c;
  padding: 15rpx 40rpx;
  border-radius: 45rpx;
  font-weight: 400;
}

.m-points-show {
  position: relative;
  margin-bottom: 25rpx;
  display: flex;
  flex-direction: row;
  z-index: 1000;
}

.points-show-line {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  border-top: 2px solid #d89b4e;
  z-index: 9;
}

.m-points-icon {
  height: 55rpx;
  width: 55rpx;
  text-align: center;
  line-height: 55rpx;
  background-color: #d89b4e;
  border-radius: 50%;
  margin: 0 13rpx;
  z-index: 10;
}

.clear-margin-left {
  margin-left: 0;
}

.clear-margin-right {
  margin-right: 0;
}

.m-points-active {
  height: 48rpx;
  width: 48rpx;
  line-height: 48rpx;
  background-color: #f3b142;
  border: 2px solid #f8d665;
}

.m-points-title {
  position: relative;
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  padding-left: 30rpx;
  margin-bottom: 45rpx;
}

.m-points-title::before {
  content: "";
  position: absolute;
  top: 9rpx;
  left: 0;
  border: 2px solid #f6d279;
  height: 60%;
}

.points-details-box {
  padding: 15rpx 0;
  padding-left: 30rpx;
  border-bottom: 1px solid #eee;
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.m-points-font{
  font-size: 38rpx;
}

.points-order-info text{
  margin-right: 15rpx;
}

.m-points-empty{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}

.m-points-empty image{
  height: 210rpx;
  width: 210rpx;
}

.m-points-empty text{
  font-size: 31rpx;
  color: #000;
  margin-top: 10rpx;
  font-weight: 400;
}