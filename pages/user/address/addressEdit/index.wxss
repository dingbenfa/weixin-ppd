/* pages/user/address/addressEdit/index.wxss */
.m-addrEdit-container{
  
}

.m-addrEdit-items{
  background-color: #fff; 
  padding: 0 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  line-height: 95rpx;
}

.btn-area{
  padding: 0 35rpx;
}

.u-circle-btn{
  margin-top: 25rpx;
  border-radius: 75rpx;
  border: 1px solid #ddd;
  font-weight: 500;
}

.m-bg-red{
  background-color: #f75853;
  border: none;
  color: #fff;
}

.u-input-clear{
  width: 45rpx;
  height: 45rpx;
  background-color: #b2b2b2;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 45rpx;
}

.m-addrEdit-inp{
  width: 455rpx;
}

.m-items-name{
  width: 155rpx;
}

.addrEdit-lable-box{
  line-height: 72rpx;
  padding: 15rpx 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.u-addrEdit-lable{
  display: inline-block;
  width: 115rpx;
  height: 50rpx;
  line-height: 48rpx;
  text-align: center;
  border: 1px solid #dedede;
  border-radius: 55rpx;
  margin: 10rpx 0;
  margin-right: 12rpx;
}

.addrEdit-items-inline{
  justify-content: flex-start;
}

.addrEdit-items-inline .m-addrEdit-inp{
  width: auto;
}

.input-clear-hid{
  background-color: #fff;
}

.addrEdit-lable-active{
  border: 1px solid #6099f1;
  color: #6099f1;
}