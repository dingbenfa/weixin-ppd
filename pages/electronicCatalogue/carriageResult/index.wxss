  font-size: 28rpx;
}

.u-ad-img {
  width: 100%;
  height: 100%;
}

.show-gey-bg {
  height: 25rpx;
  background-color: #f2f2f2;
}

.u-info-container {
  background-color: #fff;
  padding: 0 25rpx;
}

.u-info-items {
  border-bottom: 1px solid #eee;
  height: 95rpx;
  line-height: 95rpx;
}

.info-item-name {
  color: #adadad;
  float: left;
}

.info-item-show {
  float: right;
}

.u-other-box {
  background-color: #fff;
  padding: 0 25rpx;
}

.u-opt-icon {
  width: 68rpx;
  height: 68rpx;
}

.u-opt-name {
  font-size: 26rpx;
}

.u-opt-item {
  float: left;
  width: 17.7%;
  height: 65px;
  text-align: center;
  margin-right: 21rpx;
  padding-bottom: 10px;
}

.u-opt-item:nth-child(5n){
  margin-right: 0;
}

.u-opt-more{
  font-size: 24rpx;
  line-height: 75px;
  margin: 0;
