.index-container {
  position: relative;
  font-size: 32rpx;
  padding-top: 25rpx;
  background-color: #fff;
}

.u-seach-show {
  position: relative;
  padding: 0 25rpx;
}

.u-search-box {
  top: 0;
  margin-left: 25rpx;
  border: none;
  background-color: #f2f2f2;
}

.u-search-box {
  display: inline-block;
  width: 565rpx;
}

.search-sx-btn {
  width: 110rpx;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 12px;
  color: #fff;
